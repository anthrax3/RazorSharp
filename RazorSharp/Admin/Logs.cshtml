@{
    Page.Title = "Admin :: Log Data";
    Page.Heading = "Log Data";
    var fileToEdit = Server.MapPath("~/App_Data/ErrorLog.txt");
    var fileContent = string.Empty;
    var Message = string.Empty;
    if (IsPost)
    {
        try
        {
            File.WriteAllText(fileToEdit, string.Empty);
            Message = Helpers.alertSuccess("Log Successfully Cleared!!");
        }
        catch (Exception ex)
        {
            Message = Helpers.alertDanger(ex.Message.ToString());
        }
    }
    else
    {
        fileContent = System.IO.File.ReadAllText(fileToEdit);
    }

}
@section Scripts{
 
}
@section Menu{
    @RenderPage("_Menu.cshtml")
}
@Html.Raw(Message)
<form method="post" name="readLogs" id="readLogs" action="" role="form">
    <div class="col-lg-12">
        <h2 class="page-header">Log Data</h2>
        <p>The field below contains all the error logs generated by the site so far. Click the "Clear Logs" button below to clear all currently logged data.<br />Should you require help for any of the fields, please hover over the <i class="glyphicon glyphicon-info-sign" title="Hover for help."></i> icon.</p>
        <div class="form-group">
            @Html.Label("Error Logs")
            @Html.TextArea("fileContent", @fileContent, new { @rows = "25", @cols = "113", @spellcheck = "false", @class = "form-control" })
        </div>
        <p class="form-actions">
            <input type="submit" class="btn btn-primary" value="Clear Logs" />
        </p>
    </div>
</form>
@using System.Web.Routing
@{
    RouteTable.Routes.MapWebPageRoute("{PageName}/{Par1}/{Par2}", "~/Default.cshtml", new { PageName = "default", Par1=-1, Par2=-1});

    App.SiteName = Settings.GetSetting("siteName");
    App.SiteAnalytics = Settings.GetSetting("siteAnalytics");
    App.SmtpServer = Settings.GetSetting("smtpServer");
    App.SmtpPort = Settings.GetSetting("smtpPort");
    App.EnableSsl = Convert.ToBoolean(Settings.GetSetting("smtpSSL"));
    App.UserName = Settings.GetSetting("smtpUser");
    App.Password = Settings.GetSetting("smtpPass");
    App.From = Settings.GetSetting("smtpFrom");
    App.SmtpTo = Settings.GetSetting("smtpTo");
    App.Version = "1.0";

    AnalyticsUtility.DeleteOldVisitors();
}